<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Travel_App" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="android:alertDialogStyle">@style/Theme.D1NoTitleDim</item>
        <!-- Status bar color. -->
        <item name="android:navigationBarColor">@color/cardview_dark_background</item>
    </style>

    <style name="Theme.D1NoTitleDim" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>

        <item name="android:background">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/cardview_dark_background</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:background">@color/dark_bg</item>
        <item name="android:textColor">#f3f3f3</item>
        <item name="android:textColorPrimary">#f3f3f3</item>
    </style>
</resources>